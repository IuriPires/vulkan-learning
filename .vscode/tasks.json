{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Vulkan App",
            "type": "shell",
            "command": "clang++ -std=c++17 -g -I/opt/homebrew/include -I/opt/homebrew/Cellar/glm/1.0.2/include -L/opt/homebrew/lib -Wl,-rpath,/opt/homebrew/lib ${workspaceFolder}/*.cpp -lglfw -lvulkan -o ${workspaceFolder}/VulkanLearning",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile all .cpp files in root with GLFW and GLM"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "clang++ -std=c++17 -g -I/opt/homebrew/include -I/opt/homebrew/Cellar/glm/1.0.2/include -L/opt/homebrew/lib -Wl,-rpath,/opt/homebrew/lib ${workspaceFolder}/*.cpp -lglfw -lvulkan -o ${workspaceFolder}/VulkanLearning && ${workspaceFolder}/VulkanLearning",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build all .cpp files and immediately run the application"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}